#%Module1.0
#
## gmp modulefile
##
## Initializes gmp
##
proc ModulesHelp { } {
global version

puts stderr "\tInitializes your environment to use the gmp package"
puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes gmp package"

# Add required modules

# for Tcl script use only.
set version 6.1.2

prepend-path LD_LIBRARY_PATH $::env(MODULESAPPSDIR)/gnu/gmp/$version/lib
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/gnu/gmp/$version/include
prepend-path CPLUS_INCLUDE_PATH $::env(MODULESAPPSDIR)/gnu/gmp/$version/include
prepend-path LDFLAGS -L$:::env(MODULESAPPSDIR)/gnu/gmp/$version/lib
