#%Module1.0
#
## minpath modulefile
##
## Initializes minpath
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the minpath package"
	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes minpath package"

# for Tcl script use only
set version 1.2

module add python/2.7

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/minpath/$version/MinPath
