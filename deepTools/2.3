#%Module1.0
#
## deepToolsi modulefile
##
## Initializes deepTools package
##
proc ModulesHelp { } {
	global version

	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes deepTools package"

# for Tcl script use only
set version 2.3

module add python/2.7
module add gcc/5.2.0

# sets the MODULESAPPSDIR env var
module add modsappsdir 

prepend-path PATH $::env(MODULESAPPSDIR)/deepTools/$version/bin
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/deepTools/$version/lib/python2.7/site-packages
