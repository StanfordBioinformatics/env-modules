## tigra modulefile
##
## Initializes tigra
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the tigra package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes tigra package"

# for Tcl script use only
set version 0.4.2

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/tigra/$version/bin
