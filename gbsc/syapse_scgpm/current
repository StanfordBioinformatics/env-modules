#%Module1.0
#
## breakdancer modulefile
##
## Initializes  breakdancer
##
proc ModulesHelp { } {
	global breakdancerversion

	puts stderr "\tInitializes your environment to use GBSC's gbsc_utils github repository code.")"
	puts stderr "\n\tVersion $version\n"
}

# for Tcl script use only
set version current

# Adds the gbsc software folder to PYTHONPATH
module load gbsc/gbsc

set SYAPSE_SCGPM	$::env(GBSC)/syapse_scgpm/$version
setenv SYAPSE_SCGPM ${SYAPSE_SCGPM}

prepend-path PATH ${SYAPSE_SCGPM}/scripts
