#%Module1.0
#
## scgpm_lims modulefile
##
## Initializes scgpm_lims module
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the scgpm_lims module"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes scgpm_lims module"

# for Tcl script use only
set version current
set repos $::env(MODULESAPPSDIR)/gbsc/scgpm_lims/current

module add python/2.7.9_sqlite
module add gbsc/limshostenv/prod

prepend-path PYTHONPATH $repos
#i.e. from scgpm_lims import Connection
prepend-path PATH $repos/scgpm_lims/scripts/
