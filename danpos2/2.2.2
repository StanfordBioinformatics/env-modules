#%Module1.0
#
## danpos2 modulefile
##
## Initializes danpos2
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the danpos2 package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes danpos2 package"

# for Tcl script use only
set version 2.2.2

module add r/3.3.1
module add python/2.7
module add samtools/1.2

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/danpos2/danpos-$version
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/danpos2/danpos-$version

