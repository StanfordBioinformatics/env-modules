## kraken modulefile
##
## Initializes kraken
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the kraken package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes kraken package"

# for Tcl script use only
set version 0.10.4

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/kraken/kraken-$version-beta
