#%Module1.0
#
## pysam modulefile
##
## Initializes pysam
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the pysam package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes pysam package"

# for Tcl script use only
set version 0.8.3 

module add python/2.7

# sets the MODULESAPPSDIR env var
module add modsappsdir

#prepend-path PATH $::env(MODULESAPPSDIR)/pysam/$version/bin
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/pysam/$version
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/pysam/$version/lib/python
