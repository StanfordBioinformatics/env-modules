#%Module1.0
#
## prettytable modulefile
##
## Initializes prettytable
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the prettytable package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes prettytable package"

# for Tcl script use only
set version 0.7.2

module add python/2.7

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/prettytable/$version/lib/python2.7/site-packages
