#%Module1.0
#
## gatk modulefile
##
## Initializes gatk
##
proc ModulesHelp { } {
	global gatkversion

	puts stderr "\tInitializes your environment to use the GATK"
	puts stderr "\n\tVersion $gatkversion\n"
}

module-whatis "initializes gatk"

module add java/6u35
#module load r

# for Tcl script use only
set gatkversion 2.5.2

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/gatk/gatk-$gatkversion/GenomeAnalysisTK-2.5-2-gf57256b/
setenv GATKROOT $::env(MODULESAPPSDIR)/gatk/gatk-$gatkversion/GenomeAnalysisTK-2.5-2-gf57256b/
setenv GATK $::env(MODULESAPPSDIR)/gatk/gatk-$gatkversion/GenomeAnalysisTK-2.5-2-gf57256b/
