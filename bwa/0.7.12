#%Module1.0
#
## bwa modulefile
##
## Initializes bwa aligner
##
proc ModulesHelp { } {
	global bwaversion

	puts stderr "\tInitializes your environment to use the bwa sequence alignment program"
	puts stderr "\n\tVersion $bwaversion\n"
}

#module-whatis "initializes bwa sequence alignment program"

# for Tcl script use only
set bwaversion 0.7.12

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/bwa/bwa-$bwaversion/bin/bwakit
prepend-path PATH $::env(MODULESAPPSDIR)/bwa/bwa-$bwaversion/bin
prepend-path MANPATH $::env(MODULESAPPSDIR)/bwa/bwa-$bwaversion/man
