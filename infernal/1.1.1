#%Module1.0
#
## infernal modulefile
##
## Initializes infernal
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the infernal package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes infernal package"

# for Tcl script use only
set version 1.1.1

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/infernal/$version/bin
prepend-path MANPATH $::env(MODULESAPPSDIR)/infernal/$version/share/man
