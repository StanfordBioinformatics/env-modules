#%Module1.0
#
## quast modulefile
##
## Initializes quast module
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use quast.\n"
	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes quast module"

# for Tcl script use only
set version 3.2

module load python/3.2

prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/quast/$version/
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/quast/$version/libs

prepend-path PATH $::env(MODULESAPPSDIR)/quast/$version/
