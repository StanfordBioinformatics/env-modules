#%Module1.0
#
## sambamba modulefile
##
## Initializes sambamba
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the sambamba package"
	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes sambamba package"

# for Tcl script use only
set version 0.6.6

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/sambamba/$version
