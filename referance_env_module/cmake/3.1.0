#%Module1.0
#
## cmake modulefile
##
## Initializes cmake
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the cmake package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes cmake package"

# for Tcl script use only
set version 3.1.0

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/cmake/cmake-$version-Linux-x86_64/bin
