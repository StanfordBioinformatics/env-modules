#%Module1.0
#
## weblogo modulefile
##
## Initializes salmon
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the salmon package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes salmon package"

# for Tcl script use only
set version 0.4.2

# sets the MODULESAPPSDIR env var
module add modsappsdir
module add gcc/5.2.0

prepend-path PATH $::env(MODULESAPPSDIR)/salmon/$version/bin
prepend-path LD_LIBRARY_PATH $::env(MODULESAPPSDIR)/salmon/$version/lib
