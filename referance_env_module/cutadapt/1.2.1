#%Module1.0
#
## bwa modulefile
##
## Initializes bwa aligner
##
proc ModulesHelp { } {
	global bwaversion

	puts stderr "\tInitializes your environment to use the cutadapt adapter trimming program"
	puts stderr "\n\tVersion $cutadaptversion\n"
}

#module-whatis "initializes bwa sequence alignment program"

# for Tcl script use only
set cutadaptversion 1.2.1

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/cutadapt/$cutadaptversion/bin
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/cutadapt/$cutadaptversion/
