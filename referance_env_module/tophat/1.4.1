#%Module1.0
#
## tophat modulefile
##
## Initializes tophat mapper
##
proc ModulesHelp { } {
	global tophatversion

	puts stderr "\tInitializes your environment to use the tophat splice junction mapper for RNA-seq reads\n"
	puts stderr "\n\tVersion $tophatversion\n"
}

module-whatis "initializes tophat splice junction mapper"

#needs boost libs
module add boost/1.47.0

# for Tcl script use only
set tophatversion 1.4.1

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/tophat/$tophatversion
