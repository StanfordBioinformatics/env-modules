#%Module1.0
#
## xtrans modulefile
##
## Initializes xtrans
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the xtrans package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes xtrans package"

# for Tcl script use only
set version 1.3.5

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PKG_CONFIG_PATH $::env(MODULESAPPSDIR)/xtrans/$version/share/pkgconfig
prepend-path PKG_CONFIG_PATH $::env(MODULESAPPSDIR)/xtrans/$version/share/aclocal
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/xtrans/$version/include
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/xtrans/$version/include/X11/Xtrans
