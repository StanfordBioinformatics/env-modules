#%Module1.0
#
## abyss modulefile
##
## Initializes abyss
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the abyss package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes abyss package"

# for Tcl script use only
set version 1.5.2

# sets the MODULESAPPSDIR env var
module add modsappsdir
module add openmpi-x86_64
module add sparsehash/2.0.2
module add boost/1.59.0
module add sqlite/3.6.20

prepend-path PATH $::env(MODULESAPPSDIR)/abyss/abyss-$version/bin
