## diamond modulefile
##
## Initializes diamond
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the diamond package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes diamond package"

# for Tcl script use only
set version 0.7.9

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/diamond/$version
