#%Module1.0
#
## homer modulefile
##
## Initializes homer
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use homer\n"
	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes homer program"

# for Tcl script use only
set version 4.6

# sets the MODULESAPPSDIR env var
module add modsappsdir
module add blat
module add weblogo

prepend-path PATH $::env(MODULESAPPSDIR)/homer/$version/bin
