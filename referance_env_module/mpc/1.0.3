#%Module1.0
#
## mpc modulefile
##
## Initializes mpc
##
proc ModulesHelp { } {
global version

puts stderr "\tInitializes your environment to use the mpc package"
puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes mpc package"

# Add required modules

# for Tcl script use only.
set version 1.0.3

prepend-path LD_LIBRARY_PATH $::env(MODULESAPPSDIR)/gnu/mpc/$version/lib
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/gnu/mpc/$version/include
prepend-path CPLUS_INCLUDE_PATH $::env(MODULESAPPSDIR)/gnu/mpc/$version/include
prepend-path LDFLAGS -L$:::env(MODULESAPPSDIR)/gnu/mpc/$version/lib
