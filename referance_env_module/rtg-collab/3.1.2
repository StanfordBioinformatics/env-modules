#%Module1.0
#
## rtg (collabe)  modulefile
##
## Initializes RTG (Real-Time Genomics) aligner
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the RTG (Real-Time Genomics) sequence alignment program\n"
	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes RTG sequence alignment program (collab)"

# for Tcl script use only
set version 3.1.2

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/rtg-collab/rtg-core-$version
