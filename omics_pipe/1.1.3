#%Module1.0
#
## omics_pipe modulefile
##
## Initializes omics_pipe
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the omics_pipe package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes omics_pipe package"

# for Tcl script use only
set version 1.1.3

module add python/2.7
module add r/3.1.1

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/omics_pipe/$version/bin
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/omics_pipe/$version
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/omics_pipe/$version/lib/python
