#%Module1.0
#
## sratoolkit modulefile
##
## Initializes the SRA Toolkit
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the SRA Toolkit\n"
	puts stderr "\n\tVersion $rtgversion\n"
}

module-whatis "initializes SRA Toolkit"

# for Tcl script use only
set version 2.3.5

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/sratoolkit/sratoolkit.2.3.5-2-centos_linux64/bin
