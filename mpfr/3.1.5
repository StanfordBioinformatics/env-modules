#%Module1.0
#
## mpfr modulefile
##
## Initializes mpfr
##
proc ModulesHelp { } {
global version

puts stderr "\tInitializes your environment to use the mpfr package"
puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes mpfr package"

# Add required modules

# for Tcl script use only.
set version 3.1.5

prepend-path LD_LIBRARY_PATH $::env(MODULESAPPSDIR)/gnu/mpfr/$version/lib
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/gnu/mpfr/$version/include
prepend-path CPLUS_INCLUDE_PATH $::env(MODULESAPPSDIR)/gnu/mpfr/$version/include
prepend-path LDFLAGS -L$:::env(MODULESAPPSDIR)/gnu/mpfr/$version/lib
