#%Module1.0
#
## libXext modulefile
##
## Initializes libXext
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the libXext package"
	puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes libXext package"

# for Tcl script use only
set version 1.3.3

module add libX11/1.6.3

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PKG_CONFIG_PATH $::env(MODULESAPPSDIR)/libXext/$version/lib/pkgconfig
prepend-path MANPATH $::env(MODULESAPPSDIR)/libXext/$version/share/man
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/libXext/$version/include
prepend-path C_INCLUDE_PATH $::env(MODULESAPPSDIR)/libXext/$version/include/X11/extensions
prepend-path CPLUS_INCLUDE_PATH $::env(MODULESAPPSDIR)/libXext/$version/include
prepend-path CPLUS_INCLUDE_PATH $::env(MODULESAPPSDIR)/libXext/$version/include/X11/extensions
prepend-path LD_LIBRARY_PATH $::env(MODULESAPPSDIR)/libXext/$version/lib
prepend-path LDFLAGS -L$:::env(MODULESAPPSDIR)/libXext/$version/lib
