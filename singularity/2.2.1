#%Module1.0
#
## singularity modulefile
##
## Initializes singularity v2.2.1 build 2017-04
##
proc ModulesHelp { } {
global version

puts stderr "\tInitializes your environment to use singularity.\n"
puts stderr "\thttp://singularity.lbl.gov/\n"
puts stderr "\n\tVersion $version\n"
}

module-whatis "initializes singularity package"

# for Tcl script use only.
set version 2.2.1

prepend-path PATH /srv/gsfs0/software/singularity/$version/bin

prepend-path LIBRARY_PATH /srv/gsfs0/software/singularity/$version/lib
prepend-path LD_LIBRARY_PATH /srv/gsfs0/software/singularity/$version/lib
prepend-path CPATH /srv/gsfs0/software/singularity/$version/include
prepend-path MANPATH /srv/gsfs0/software/singularity/$version/share/man
