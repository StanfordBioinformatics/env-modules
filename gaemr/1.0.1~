#%Module1.0
#
## gaemr modulefile
##
## Initializes gaemr
##
proc ModulesHelp { } {
	global version

	puts stderr "\tInitializes your environment to use the gaemr package"
	puts stderr "\n\tVersion $version\n"
}

#module-whatis "initializes gaemr package"

# for Tcl script use only
set version 1.0.1

module add python/2.7
module add blast/2.2.30+
module add perl-scg/1.0

# sets the MODULESAPPSDIR env var
module add modsappsdir

prepend-path PATH $::env(MODULESAPPSDIR)/gaemr/GAEMR-$version/bin
prepend-path PYTHONPATH $::env(MODULESAPPSDIR)/gaemr/GAEMR-$version
